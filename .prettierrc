{
	"trailingComma": "es5",
	"tabWidth": 2,
	"useTabs": true,
	"semi": true,
	"singleQuote": true,
	"printWidth": 80,
	"bracketSameLine": false,
	"htmlWhitespaceSensitivity": "strict",
	"overrides": [
		{
			"files": "*.svg",
			"options": {
				"parser": "html"
			}
		}
	],
	"importOrder": [
		"<THIRD_PARTY_MODULES>",
		"^@/components/(.*)$",
		"^@/components/ui/(.*)$",
		"^@/screens/(.*)$",
		"^@/hooks/(.*)$",
		"^@/shared/(.*)$",
		"^@/assets/(.*)$",
		"^@/utils/(.*)$",
		"^@/types/(.*)$",
		"^@/configs/(.*)$",
		"^@/store/(.*)$",
		"^../(.*)",
		"^./(.*)",
		"(.scss)$"
	],
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true,
	"plugins": [
		"@trivago/prettier-plugin-sort-imports",
		"prettier-plugin-tailwindcss"
	],
	"tailwindFunctions": ["clsx", "cva", "cn"]
}
